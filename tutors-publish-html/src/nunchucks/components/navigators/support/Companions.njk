{% from "css/tailwindcss.njk" import iconbar %}
{% from "components/iconography/Icon.njk" import icon, customicon %}
{% macro companions(properties) %}
  {% if properties.moodle or properties.slack or properties.youtube or properties.teams %}
    <div class="{{ iconbar }}">
      {% if properties.moodle %}
        {{ icon ("moodle", 20, properties.moodle, "To Moodle ...", true) }}
      {% endif %}
      {% if properties.slack %}
        {{ icon ("slack", 20, properties.slack, "To Slack ...", true) }}
      {% endif %}
      {% if properties.youtube %}
        {{ icon ("youtube", 20, properties.youtube, "To Youtube ...", true) }}
      {% endif %}
      {% for key, value in properties.companions %}
        {{ customicon (value.icon.icon, value.icon.colour, 20, value.link, value.title) }}
      {% endfor %}
    </div>
  {% endif %}
{% endmacro %}