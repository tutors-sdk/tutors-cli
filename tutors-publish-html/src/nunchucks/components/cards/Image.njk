{% from "css/tailwindcss.njk" import tutorscardimage %}
{% macro image (lo, path, imageoverride="") %}
  {% if (lo.icon) %}
    <span class="iconify" data-icon="{{ lo.icon.type }}" data-width="164" style="color:{{ lo.icon.color }};"></span>
  {% else %}
    {% if imageoverride !== "" %}
       <img loading="lazy" class="{{ tutorscardimage }}" src="{{ lo.img}}" alt="{{ lo.title }}">
    {% else %}
    <img loading="lazy" class="{{ tutorscardimage }}" src="{{ path }}/{{ lo.id }}/{{ lo.imgFile }}" alt="{{ lo.title }}">
    {% endif %}
  {% endif %}
  {% endmacro %}